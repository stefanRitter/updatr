{
    "manifest_version": 2,

    "name": "Upadtr",
    "short_name": "Upadtr",
    "description": "Follow Anything. Never miss new content from your favorite sites.",
    "version": "0.0.2",

    "icons": {
        "16": "icon-16.png",
        "32": "icon-32.png",
        "48": "icon-48.png",
        "128": "icon-32.png"
    },

    "permissions": [
        "cookies",
        "alarms",
        "https://www.getupdatr.com/"
    ],

    "background": {
        "scripts": ["chrome-button.js"],
        "persistent": false
    },

    "content_scripts": [{
        "matches": ["*://www.getupdatr.com/*"],
        "js": ["chrome-badge.js"]
    }],

    "browser_action": {
        "default_icon": "icon-128.png",
        "default_title": "Updatr"
    }
}
